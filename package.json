{
  "name": "provenance-passport",
  "version": "0.1.0",
  "private": true,
  "description": "Verifiable digital provenance for artifacts",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "build": "pnpm -r run build",
    "build:viewer": "pnpm -F @passport/viewer build",
    "build:site": "echo 'Site package uses static files - copying to public/' && mkdir -p packages/site/public && cp -r packages/site/static/* packages/site/public/ 2>/dev/null || true",
    "build:data": "echo 'Data package uses static files - no build needed'",
    "dev": "pnpm -r run dev",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm -F @passport/viewer test:e2e",
    "test:e2e:ui": "pnpm -F @passport/viewer test:e2e:ui",
    "test:e2e:install": "pnpm -F @passport/viewer test:e2e:install",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "release": "pnpm -r run release",
    "clean": "pnpm -r run clean"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "provenance",
    "verification",
    "digital-signatures",
    "supply-chain",
    "security"
  ],
  "author": "Provenance Passport Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/IngarsPoliters/ProvenancePass.git"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}