{
  "name": "provenance-passport",
  "version": "0.1.0",
  "private": true,
  "description": "Verifiable digital provenance for artifacts",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "scripts": {
