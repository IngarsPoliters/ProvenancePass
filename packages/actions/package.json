{
  "name": "provenance-passport-action",
  "version": "0.1.0",
  "description": "GitHub Action: Create and verify cryptographic provenance for digital artifacts",
  "main": "action.yml",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "github-action",
    "provenance",
    "verification",
    "cryptographic-signatures",
    "c2pa",
    "digital-provenance",
    "build-attestation"
  ],
  "license": "Apache-2.0"
}