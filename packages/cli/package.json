{
  "name": "@provenancepass/cli",
  "version": "0.1.0",
  "description": "Create and verify cryptographic provenance records for your builds, documents, and media files. Supports C2PA embedding, DOCX custom parts, and sidecar files.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pp": "dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "zod": "^3.22.4",
    "@noble/ed25519": "^2.0.0",
    "fast-glob": "^3.3.2",
    "undici": "^6.6.2",
    "ajv": "^8.17.0",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitest": "^1.2.0",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.5"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "keywords": [
    "cli",
    "provenance",
    "verification",
    "cryptography",
    "c2pa",
    "digital-signatures",
    "supply-chain",
    "build-verification",
    "ed25519",
    "docx",
    "security",
    "tamper-proof"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/IngarsPoliters/ProvenancePass.git",
    "directory": "packages/cli"
  },
  "homepage": "https://provenancepass.com",
  "bugs": {
    "url": "https://github.com/IngarsPoliters/ProvenancePass/issues"
  }
}