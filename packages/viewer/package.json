{
  "name": "@passport/viewer",
  "version": "0.1.0",
  "description": "Web drag-drop verifier for Provenance Passport",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "vite build && node scripts/validate-bundle-size.js",
    "build:analyze": "vite build --mode analyze",
    "dev": "vite",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:install": "playwright install",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "c2pa": "^0.30.10",
    "@noble/ed25519": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.2.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "@playwright/test": "^1.40.0"
  },
  "keywords": [
    "viewer",
    "web",
    "verification",
    "provenance"
  ],
  "license": "Apache-2.0"
}